# Database connection URL for Prisma
DATABASE_URL="postgres://postgres:{POSTGRES_PASSWORD}@db.{YOUR_INSTANCE_NAME}.supabase.co:5432/postgres"

# Supabase configuration
SUPABASE_URL="https://{YOUR_INSTANCE_NAME}.supabase.co"
SUPABASE_ANON_KEY="{SUPABASE_ANON_KEY}"
SUPABASE_SERVICE_ROLE_KEY="{SUPABASE_SERVICE_ROLE_KEY}"

# Session encryption secret (same as your Supabase JWT secret)
# Generate with: openssl rand -hex 32
SUPABASE_JWT_SECRET="super-duper-s3cret"

# Server URL for OAuth callbacks and password reset links
# On Vercel, VERCEL_URL is automatically set and used
# For local development, set this to your local server URL
SERVER_URL="http://localhost:3000"